<h1 class="text-center">Dashboard</h1>
<row >
	<div class="col-md-4">
		<h3 class="text-center">Books <%= link_to "New book", new_book_path, class: "btn btn-primary btn-sm" %></h3>
		<table class="table table-hover">
	      <thead>
	        <tr>
	          <th>ID</th>
	          <th>Book</th>
	          <th>Availability</th>
	          <th>Price</th>
	          <th>Edit</th>
	        </tr>
	      </thead>
	      <tbody>
	      <% @books.each do |book| %>
	        <tr data-link="<%= edit_book_path(book) %>">
	          <th scope="row"><%= book.id %></th>
	          <td><%= book.name %></td>
	          <td><%= book.availability %></td>
	          <td><%= book.price %></td>
	          <td><%= link_to "<i class='fa fa-pencil-square-o'></i>".html_safe, edit_book_path(book) %></td>
	        </tr>

	      <% end %>
	      </tbody>
	    </table>


	</div>
	<div class="col-md-4">
	<h3 class="text-center">Purchased</h3>

	</div>
	<div class="col-md-4">
	<h3 class="text-center">Sales</h3>

	</div>
</row>